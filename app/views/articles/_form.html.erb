<%= form_with(model: article, local: true, html: { multipart: true }) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(article.errors.count, "erro") %> proibiu que este artigo fosse salvo:</h2>
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :published_at %>
    <%= form.date_select :published_at, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= form.text_field :tags, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :pdf %> (importar PDF)
    <%= form.file_field :pdf, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %> (cadastrar imagem)
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <% if article.pdf.attached? %>
    <div class="form-group">
      <%= link_to 'Download PDF', rails_blob_path(article.pdf, disposition: "attachment"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Salvar Artigo", class: "btn btn-success" %>
  </div>
<% end %>
